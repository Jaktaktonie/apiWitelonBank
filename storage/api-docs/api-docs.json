                    },
                    "adres_odbiorcy_linia2": {
                        "type": "string",
                        "nullable": true
                    },
                    "tytul": {
                        "type": "string",
                        "example": "Za zakupy"
                    },
                    "kwota": {
                        "type": "number",
                        "format": "float",
                        "example": 150.99
                    },
                    "waluta": {
                        "type": "string",
                        "example": "PLN"
                    },
                    "status": {
                        "type": "string",
                        "example": "zrealizowany"
                    },
                    "data_zlecenia": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-05-15T10:00:00Z"
                    },
                    "data_realizacji": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-05-15T10:01:00Z",
                        "nullable": true
                    },
                    "informacja_zwrotna": {
                        "type": "string",
                        "nullable": true
                    },
                    "utworzono": {
                        "type": "string",
