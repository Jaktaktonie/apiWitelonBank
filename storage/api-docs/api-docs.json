        "/api/login": {
            "post": {
                "tags": [
                    "Autoryzacja"
                ],
                "summary": "Logowanie użytkownika (Krok 1: Weryfikacja hasła)",
                "description": "Weryfikuje email i hasło. Jeśli poprawne, wysyła kod 2FA na email.",
                "operationId": "eb9ad6907cdd515bfb968480a4af8580",
                "requestBody": {
                    "description": "Dane logowania",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "haslo"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jan.kowalski@example.com"
                                    },
                                    "haslo": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "superTajemneHaslo123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Wymagana weryfikacja dwuetapowa. Kod wysłany na email.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Wymagana weryfikacja dwuetapowa. Kod został wysłany na Twój adres email."
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "jan.kowalski@example.com"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany (błędne dane lub konto niezweryfikowane)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Nieprawidłowy email lub hasło."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Błąd walidacji",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Podane dane są nieprawidłowe."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Błąd serwera (np. problem z wysyłką maila)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Nie udało się wysłać kodu weryfikacyjnego. Spróbuj ponownie później."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/verify-2fa": {
            "post": {
                "tags": [
                    "Autoryzacja"
                ],
                "summary": "Logowanie użytkownika (Krok 2: Weryfikacja kodu 2FA)",
                "description": "Weryfikuje kod 2FA i jeśli poprawny, loguje użytkownika i zwraca token API.",
                "operationId": "c3b56fdaf50d86f74fdc046a89745f10",
                "requestBody": {
                    "description": "Email użytkownika i kod 2FA",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "dwuetapowy_kod"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jan.kowalski@example.com"
                                    },
                                    "dwuetapowy_kod": {
                                        "description": "6-cyfrowy kod z emaila",
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Zalogowano pomyślnie po weryfikacji 2FA",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Zalogowano pomyślnie."
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "1|abcdefghijklmnopqrstuvwxyz123456"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "imie": {
                                                    "type": "string",
                                                    "example": "Jan"
                                                },
                                                "nazwisko": {
                                                    "type": "string",
                                                    "example": "Kowalski"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "jan.kowalski@example.com"
                                                },
                                                "administrator": {
                                                    "type": "boolean",
                                                    "example": false
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany (nieprawidłowy/wygasły kod lub błąd użytkownika)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Nieprawidłowy lub wygasły kod weryfikacyjny."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Użytkownik nie znaleziony",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Użytkownik o podanym adresie email nie został znaleziony."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Błąd walidacji",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Podane dane są nieprawidłowe."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Autoryzacja"
                ],
                "summary": "Wylogowanie użytkownika",
                "description": "Unieważnia aktualny token API użytkownika.",
                "operationId": "bbfed2e939f72a23785299584542cb60",
                "responses": {
                    "200": {
                        "description": "Wylogowano pomyślnie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Wylogowano pomyślnie."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany (brak lub nieprawidłowy token)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
