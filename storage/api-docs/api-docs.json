    "paths": {
        "/api/konta": {
            "get": {
                "tags": [
                    "Konta"
                ],
                "summary": "Pobiera listę kont zalogowanego użytkownika wraz z saldami",
                "operationId": "023b73709e81a2eea4e2adbda71e7cf8",
                "responses": {
                    "200": {
                        "description": "Lista kont użytkownika",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "nr_konta": {
                                                "type": "string",
                                                "example": "PL12345678901234567890123456"
                                            },
                                            "saldo": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 1500.75
                                            },
                                            "waluta": {
                                                "type": "string",
                                                "example": "PLN"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/konta/{idKonta}": {
            "get": {
                "tags": [
                    "Konta"
                ],
                "summary": "Pobiera szczegóły konkretnego konta użytkownika",
                "operationId": "b3a9ec4e4a930406c19de866e870dc3e",
                "parameters": [
                    {
                        "name": "idKonta",
                        "in": "path",
                        "description": "ID konta",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Szczegóły konta",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "nr_konta": {
                                            "type": "string",
                                            "example": "PL12345678901234567890123456"
                                        },
                                        "saldo": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 1500.75
                                        },
                                        "limit_przelewu": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 1000
                                        },
                                        "zablokowane": {
                                            "type": "boolean",
                                            "example": false
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany"
                    },
                    "403": {
                        "description": "Brak uprawnień (konto nie należy do użytkownika)"
                    },
                    "404": {
                        "description": "Konto nie znalezione"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/przelewy": {
            "post": {
                "tags": [
                    "Przelewy"
                ],
                "summary": "Tworzy nowy przelew",
                "operationId": "7f3ada558b127ed64b63efb9ed499b86",
                "requestBody": {
                    "description": "Dane przelewu",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "id_konta_nadawcy",
                                    "nr_konta_odbiorcy",
                                    "nazwa_odbiorcy",
                                    "tytul",
                                    "kwota",
                                    "waluta_przelewu"
                                ],
                                "properties": {
                                    "id_konta_nadawcy": {
                                        "description": "ID konta, z którego wysyłany jest przelew",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "nr_konta_odbiorcy": {
                                        "description": "Numer konta odbiorcy",
                                        "type": "string",
                                        "example": "PL98765432109876543210987654"
                                    },
                                    "nazwa_odbiorcy": {
                                        "description": "Nazwa odbiorcy",
                                        "type": "string",
                                        "example": "Anna Nowak"
                                    },
                                    "adres_odbiorcy_linia1": {
                                        "type": "string",
                                        "example": "ul. Słoneczna 10",
                                        "nullable": true
                                    },
                                    "adres_odbiorcy_linia2": {
                                        "type": "string",
                                        "example": "00-123 Warszawa",
                                        "nullable": true
                                    },
                                    "tytul": {
                                        "type": "string",
                                        "example": "Za zakupy"
                                    },
                                    "kwota": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 150.99
                                    },
                                    "waluta_przelewu": {
                                        "description": "Waluta przelewu (np. PLN, EUR)",
                                        "type": "string",
                                        "example": "PLN"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Przelew został pomyślnie utworzony (zlecony)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PrzelewResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Błąd danych (np. niewystarczające środki, konto zablokowane)"
                    },
                    "401": {
                        "description": "Nieautoryzowany"
                    },
                    "403": {
                        "description": "Brak uprawnień do konta nadawcy"
                    },
                    "404": {
                        "description": "Konto nadawcy nie znalezione"
                    },
                    "422": {
                        "description": "Błąd walidacji"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/konta/{idKonta}/przelewy": {
            "get": {
                "tags": [
                    "Przelewy"
                ],
                "summary": "Pobiera historię przelewów dla danego konta",
                "operationId": "c0ff505db5be916e7fb4cfe0ee7c88c0",
                "parameters": [
                    {
                        "name": "idKonta",
                        "in": "path",
                        "description": "ID konta",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "typ",
                        "in": "query",
                        "description": "Filtruj wg typu: 'wychodzace', 'przychodzace'",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "wychodzace",
                                "przychodzace"
                            ]
                        }
                    },
                    {
                        "name": "strona",
                        "in": "query",
                        "description": "Numer strony dla paginacji",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "na_strone",
                        "in": "query",
                        "description": "Liczba wyników na stronę",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 15
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista przelewów",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PrzelewResource"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nieautoryzowany"
                    },
                    "403": {
                        "description": "Brak uprawnień do tego konta"
                    },
                    "404": {
                        "description": "Konto nie znalezione"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
